{
  "name": "plo",
  "version": "1.0.0",
  "description": "Project Lifecycle Orchestrator — Retailer bricolage & aménagement",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "build": "tsc",
    "start": "node dist/main.js",
    "worker": "tsx src/workers/event.worker.ts",
    "seed": "tsx src/seed/index.ts",
    "typecheck": "tsc --noEmit",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:reset": "prisma migrate reset --force",
    "client": "cd client && pnpm dev"
  },
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/sensible": "^6.0.1",
    "@prisma/client": "^5.22.0",
    "bullmq": "^5.38.0",
    "dotenv": "^17.3.1",
    "fastify": "^5.2.0",
    "fastify-plugin": "^5.0.1",
    "ioredis": "^5.3.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^8.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.17.0",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^7.0.11",
    "pino-pretty": "^13.1.3",
    "prisma": "^5.22.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0"
  }
}
